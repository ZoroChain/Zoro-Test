								"exec": [
									"/*jshint loopfunc:true */",
									"let responseJson = pm.response.json();",
									"",
									"console.log('responseJson', responseJson);",
									"",
									"for (let hash of responseJson.result.hashlist) {",
									"    console.log(hash);",
									"",
									"    pm.sendRequest(`http://${pm.variables.get(\"Address\")}:${pm.variables.get(\"Port\")}/?jsonrpc=2.0&id=1&method=getappchainstate&params=[\"${hash}\"]`, (err, response) => {",
									"        console.log(hash);",
									"        console.log(response);",
									"        let jsonData = response.json();",
									"        console.log(jsonData);",
									"        pm.test(\"Response Status is 200.\", () => {",
									"            pm.expect(response.code).to.eql(200);",
									"        });",
									"        pm.test(\"Got right hash.\", () => {",
									"            pm.expect(jsonData.result.hash).to.eql(hash);",
									"        });",
